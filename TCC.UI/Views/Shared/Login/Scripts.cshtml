
<script type="text/javascript">
    @if ((bool?)TempData["OpenLogin"] == true)
    {
        // Limpo todos os campos de Cadastro
        @:clearAllTextInputs();

        // Abro model de Login
        @:showLogin();
    }

    function reloadPage() {
        window.location.reload();
    }

    function showLogin() {
        clearValidations();
        $('#ModalNewAccount').modal('hide');
        $('#ModalLogin').modal('show');
    }

    function showNewAccount() {
        clearValidations();
        $('#ModalLogin').modal('hide');
        $('#ModalNewAccount').modal('show');
    }
</script>
