
<script type="text/javascript">
    @if ((bool?)ViewData["ErrorNewAccount"] == true)
    {
        @:$('#ModalNewAccount').modal('show');
    }

    @if ((bool?)ViewData["ErrorLogin"] == true)
    {
        @:$('#ModalLogin').modal('show');
    }

    @if ((bool?)TempData["SuccessNewAccount"] == true)
    {
        // Limpo todos os campos de Cadastro
        @:clearAllTextInputs();

        // Abro model de Login
        @:showLogin();
        @:$('#SuccessNewAccount').show();
    }

    function showLogin() {
        clearValidations();
        $('#ModalNewAccount').modal('hide');
        $('#ModalLogin').modal('show');
    }

    function showNewAccount() {
        clearValidations();
        $('#ModalLogin').modal('hide');
        $('#ModalNewAccount').modal('show');
    }
</script>
