@using TCC.UI.Helpers.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Easy Test</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="/favicon.ico" />

    @Styles.Render("~/Styles/Components")
    @Styles.Render("~/Styles/AdminLTE")
    @Styles.Render("~/Styles/DataTable")
    @Styles.Render("~/Styles/Site")
</head>
<body class="skin-blue layout-top-nav">
    <div class="wrapper wrapper-fixed">
        @Html.Partial("_Header")

        @Helpers.ContentFixed()
        @Helpers.Footer()
    </div>
    <div class="wrapper wrapper-landing-page">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/Scripts/Base")
    @Scripts.Render("~/Scripts/AdminLTE")
    @Scripts.Render("~/Scripts/Site")
    @Scripts.Render("~/Scripts/LandingPage")

    @this.WriteScriptBlocks()

    @RenderSection("scripts", required: false)
</body>
</html>

