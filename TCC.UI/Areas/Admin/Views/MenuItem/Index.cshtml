@using TCC.UI.Areas.Admin.ViewsModels.Menu
@model VMMenuItem

@{
    ViewBag.Title = "Menu Item";

    var urlEdit = "/Admin/MenuItem/Item";
}

<div class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    @Ajax.ActionLink("Voltar", "Index", "Menu", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-warning" })
    @Ajax.ActionLink("Adicionar", "Item", "MenuItem", null, new AjaxOptions { InsertionMode = InsertionM  ode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-primary" })
    </ul>
</div>
<div class="content">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Tabela de @ViewBag.Title</h3>
        </div>
        <div class="box-body">
            <div class="dataTables_wrapper form-inline dt-bootstrap">
                <div class="col-sm-12">
                    <table id="Table" class="table table-bordered table-striped dataTable" role="grid">
                        <thead>
                            <tr>
                                <th width="100px">@Html.DisplayNameFor(m => m.Id)</th>
                                <th>@Html.DisplayNameFor(m => m.Title)</th>
                                <th>@Html.DisplayNameFor(m => m.Url)</th>
                                <th width="100px">@Html.DisplayNameFor(m => m.Order)</th>
                                <th width="5px"></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {    
    @Scripts.Render("~/Scripts/DataTable")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Table").DataTable({
                data: @Html.Raw(Json.Encode(ViewBag.List)),
                columnDefs: [{
                    targets: 4,
                    orderable: false
                }],
                columns:
                [
                    @Helpers.ColumnEdit("Id", urlEdit),
                    @Helpers.ColumnEdit("Title", urlEdit),
                    @Helpers.ColumnEdit("Url", urlEdit),
                    @Helpers.ColumnEdit("Order", urlEdit),
                    @Helpers.ColumnIcon("fa fa-table", "menuItem")
                ],
                @Helpers.LanguageTable()
            });
        });
    </script>
}
