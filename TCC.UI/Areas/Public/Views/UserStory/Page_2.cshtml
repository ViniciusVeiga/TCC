@model ETHistoric

@using TCC.Domain.Entities
@using TCC.Domain.Interfaces

<div class="content-header">
    <h1>
        Criação do User Story
    </h1>
    <div class="breadcrumb">
        @Ajax.ActionLink("Voltar", "Page_2", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-warning" })
        
        @if (Model.CardUserStorys?.Count > 0)
        {
            @Ajax.ActionLink("Continuar", "Page_3", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-primary" })
        }
    </div>
</div>
<div class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="col-lg-12">
                <div>
                    <h4>Após a seleção dos atores, é que se começa a contruir os cartões do User Story.</h4>
                    <p>Utilize a lousa para escrever os cartões.</p>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="board">
                <div class="row">
                    <div class="col-sm-12 col-md-3">
                        <h4>Segue o exemplo abaixo:</h4>
                        <div class="to-remove">
                            <div class="alert postit">
                                <p>Eu como << QUEM >></p>
                                <p>Quero << O QUÊ >></p>
                                <p>Para << POR QUÊ >></p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-2 col-centered board-message" style="display: none;"></div>
                </div>
                <div class="row" id="Append">
                    @Helpers.CreatePostit(Model.CardUserStorys?.Cast<ICard>().ToList())
                </div>
                <div class="bottom-board">
                    <input id="BtnSave" type="submit" class="btn btn-flat btn-board btn-lg" value="Salvar">
                </div>
            </div>
        </div>
    </div>
</div>

@Helpers.PostitExampleHTML("eu como...")

@section scripts {
    @Html.Partial("_ScriptPage_2")
}