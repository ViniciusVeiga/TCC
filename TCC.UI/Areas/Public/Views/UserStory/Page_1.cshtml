@model ETHistoric

@using TCC.Domain.Entities
@using TCC.Domain.Interfaces

<div class="content-header">
    <h1>
        Selecionar Atores
    </h1>
    <div class="breadcrumb">
        @Ajax.ActionLink("Voltar", "Index", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-warning" })
        
        @if (Model.CardActors?.Count > 0)
        {
            @Ajax.ActionLink("Continuar", "Page_2", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-primary" })
        }
    </div>
</div>
<div class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="col-lg-12">
                <div>
                    <h4>Após a escolha do projeto, é necessario definir qual atores podem existir em seu projeto.</h4>
                    <p>Utilize a lousa para escrever os atores.</p>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="board">
                <div class="row">
                    <div class="col-sm-12 col-md-3">
                        <h4>Segue o exemplo abaixo:</h4>
                        <div class="alert postit">
                            <p><< NOME DO ATOR >></p>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row" id="Append">
                    @Helpers.MessageBoard()

                    @Helpers.CreatePostit_2(Model.CardActors)

                    <div class="bottom-board">
                        @Helpers.SaveButtonBoard()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Helpers.PostitExampleHTML()

@section scripts {
    @Html.Partial("_ScriptPage_1")
}