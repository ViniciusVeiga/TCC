@model ETHistoric

@using TCC.Domain.Entities
@using TCC.Domain.Interfaces

<style>
    .postit.btn-color{
        height:55px;
        width:60px;
        padding: 10px;
        text-align: center;
    }

        .postit.btn-color .close {
            float: none;
            color: #333;
        }
</style>
<div class="content-header">
    <h1>
        Criação do User Story
    </h1>
    <div class="breadcrumb">
        @Ajax.ActionLink("Voltar", "Page_2", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-warning" })
        @Ajax.ActionLink("Continuar", "Page_4", "UserStory", null, new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "Ajax_Update_Menu" }, new { @class = "btn btn-primary" })      
    </div>
</div>
<div class="content">
    <div class="box">
        <div class="box-header with-border">
            <div class="col-lg-12">
                <div>
                    <h4>Após a seleção dos atores, é que se começa a contruir os cartões do User Story.</h4>
                    <p>Utilize a lousa para escrever os cartões.</p>
                </div>
            </div>
        </div>
        <div class="box-body">
            <div class="board">
                <div class="row">
                    <div class="col-sm-12">
                        <h4>Marcador (Clique aqui para pegar a cor):</h4>
                        <div class="alert postit btn-color">
                            <button id="ColorButton" type="button" class="close"><i class="fa fa-bookmark"></i></button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h4>Cartões de Atores:</h4>
                    </div>
                    @PostitHelpers.CreatePostit_3(Model.CardActors)
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12">
                        <h4>Cartões de User Stories:</h4>
                    </div>

                    @PostitHelpers.CreatePostit_3(Model.CardUserStorys)

                    <div class="bottom-board">
                        @Helpers.SaveButtonBoard()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@PostitHelpers.PostitExampleHTML("eu como...")

@section scripts {
    @Html.Partial("_ScriptPage_3")
}