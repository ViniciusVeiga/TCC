@model TCC.Domain.Entities.Admin.ETContent

@{
    var urlTechnicalTutorial = "/Public/TechnicalTutorial/Index";
}

<div class="content-header">
    <h1>
        @Model.Title
    </h1>
    <div class="breadcrumb">
        @if (!string.IsNullOrEmpty(Model.UrlDynamicTutorial))
        {
            <a onclick="newPage(null, '@Model.UrlDynamicTutorial')" class="btn btn-warning">Tutorial Dinâmico</a>
        }

        @if ((bool)ViewBag.HasTechnicalTutorial == true)
        {
            <a onclick="newPage(@Model.Id, '@urlTechnicalTutorial')" class="btn btn-primary">Tutorial Técnico</a>
        }
    </div>
</div>
<div class="content">
    <div class="box">
        <div class="box-body">
            <div class="col-lg-12">
                @Html.Raw(Model.Text)
            </div>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/Prism")
}