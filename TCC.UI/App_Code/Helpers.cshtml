    @:      render: function(data, type, row) {
    @:          return '<a href="javascript:void(0);" onclick="edit(' + row.Id + ')">' + data + '</a>';
    @:      }
    @:  }
}

@helper ColumnToAction(string icon, string ajax, string texto = "")
{
    @:  {
